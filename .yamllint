---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  comments-indentation: disable
  comments: disable
  document-start: disable
  empty-lines:
    max-end: 1
  indentation:
    spaces: 2
    indent-sequences: consistent 